<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="MuckiSearchPlugin\Commands\Checkup" id="mucki.search.commands.checkup" public="true">
            <argument type="service" id="MuckiSearchPlugin\Services\Settings"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
            <argument type="service" id="MuckiSearchPlugin\Elasticsearch\Info"/>
            <tag name="console.command"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service class="MuckiSearchPlugin\Commands\Indexing" id="mucki.search.commands.indexing" public="true">
            <argument type="service" id="MuckiSearchPlugin\Services\Settings"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
            <tag name="console.command"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="MuckiSearchPlugin\Elasticsearch\Client" public="true">
            <argument type="service" id="MuckiSearchPlugin\Services\Settings"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
        </service>
        <service id="MuckiSearchPlugin\Elasticsearch\Index" public="true">
            <argument type="service" id="MuckiSearchPlugin\Elasticsearch\Client"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
        </service>
        <service id="MuckiSearchPlugin\Elasticsearch\Info" public="true">
            <argument type="service" id="MuckiSearchPlugin\Elasticsearch\Client"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
        </service>
    	<service id="MuckiSearchPlugin\Services\Settings" public="true">
        	<argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
    </services>
</container>